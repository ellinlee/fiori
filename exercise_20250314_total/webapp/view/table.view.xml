<mvc:View xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:table="sap.ui.table">
    <Shell id="panel_table">

        <Table id='table1'
            items="{/zteacher_d17Set}"
            mode="MultiSelect">
            <columns>
                <Column id="Name"
                    hAlign="Center">
                    <header>
                        <Label id='Name_label'
                            text="Name"
                            textAlign="Center"></Label>
                    </header>
                </Column>

                <Column id="Class"
                    hAlign="Center">
                    <header>
                        <Label id='Class_label'
                            text="Class"
                            textAlign="Center"></Label>
                    </header>
                </Column>

                <Column id="Gender"
                    hAlign="Center">
                    <header>
                        <Label id='Gender_label'
                            text="Gender"
                            textAlign="Center"></Label>
                    </header>
                </Column>

                <Column id="Detail"
                    hAlign="Center">
                    <header>
                        <Label id='Detail_label'
                            text="Details"
                            textAlign="Center"></Label>
                    </header>
                </Column>
            </columns>

            <items>
                <ColumnListItem id='columnListItem'>
                    <cells>
                        <Text id='name_text'
                            text="{Name}"
                            textAlign="Center"></Text>
                        <Text id='class_text'
                            text="{Class}"
                            textAlign="Center"></Text>
                        <Text id='gender_text'
                            text="{Gender}"
                            textAlign="Center"></Text>
                        <Button id="detail_button"
                            text="Button"
                            press=".onPress"></Button>
                    </cells>
                </ColumnListItem>
            </items>

        </Table>
    </Shell>

</mvc:View>